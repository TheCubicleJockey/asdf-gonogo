#!/usr/bin/env bash

set -euo pipefail

query="${1:-}"
if [ -z "$query" ]; then
  echo "https://github.com/FairwindsOps/polaris/releases/download/${version}/polaris_${platform}$(get_cpu).tar.gz"
else
  asdf list all gonogo "$query" | grep -ivE "(^Available version:|-src|-dev|-latest|-stm|[-\\.]rc|-alpha|-beta|[-\\.]pre|-next|(a|b|c)[0-9]+|snapshot|master)" | sed 's/^[[:space:]]\+//' | tail -1
fi
